
/* 曲线 */
#mychart-dom-line {
  width: 100%;
  z-index: 1;
  height: 100%;
  -webkit-tap-highlight-color: transparent;
  user-select: none;
  background: transparent;
  position: relative;
}

.chart-top{
  flex: 0 0 100rpx;
}
.chart-content{
 flex: 1;
 position: relative;
}
.chart-bottom{
  flex: 0 0 100rpx;
}




.content-wrapper {
  font-family: PingFangSC-Medium;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #FCFCFC;
}

page {
  height: 100%;
}
.phcolor {
font-size:28rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(74,74,74,0.3);
}
.evalute-picker {
  box-sizing: border-box;
  width: 640rpx;
  height: 88rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 48rpx;
  border: 2rpx solid rgba(204, 204, 204, 1);
  padding-left: 40rpx;
  margin-top: 40rpx;
}

.body-info-wrapper {
  width: 640rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.body-info-wrapper.hasCard {
  margin-bottom: 38rpx;
}

.input-group {
  position: relative;
  margin-top: 30rpx;
}

.body-info {
  box-sizing: border-box;
  width: 200rpx;
  height: 88rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 48rpx;
  border: 2rpx solid rgba(204, 204, 204, 1);
  font-size: 28rpx;
  font-weight: 400;
  padding-left: 26rpx;
}

.unit {
  position: absolute;
  top: 50%;
  transform: translateY(-60%);
  right: 28rpx;
  font-weight: 400;
  color: rgba(74, 74, 74, 0.3);
}

.body-info-button {
  width: 640rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: rgba(46, 202, 186, 1);
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  margin-top: 30rpx;

}

.footer {
  width: 100%;
  height: 320rpx;
  background: rgba(216, 216, 216, 0.7);
}

swiper.f {
  height: 325rpx;
}

swiper.s {
  height: 150rpx;
}

.card {
  width: 600rpx;
  height: 240rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 20rpx 0px rgba(75, 29, 117, 0.14);
  border-radius: 16rpx;
  border:2px solid rgba(66,47,135,1);
  margin-top: 26rpx;
  margin-left: auto;
  margin-right: auto;
  position: relative;
}

.close {
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  right: 18rpx;
  top: 18rpx;
}

.top {
  display: flex;
  border-bottom: 2rpx solid rgba(230, 230, 230, 1);
  height: 128rpx;
}

.down {
  padding-left: 28rpx;
  padding-right: 38rpx;
  padding-top: 16rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  display: flex;
  justify-content: space-between;
}

.left-top {
  width: 146rpx;
  height: 128rpx;
  background: rgba(84, 64, 157, 1);
  border-radius: 10rpx 0px 0px 0px;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-content: center;
}

.right-top {
  display: flex;
  justify-content: space-between;
  flex-grow: 1;
  height: 128rpx;
  padding: 0 24rpx;
}

.card-number {
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  width: 100%;
}

.card-number.small {
  font-size: 24rpx;
}

.card-info {
  height: 128rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-content: center;
}

.card-title {
  text-align: center;
  width: 100%;
  height: 32rpx;
  font-size: 22rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 32rpx;
  margin-bottom: 8rpx;
}

.card-content {
  text-align: center;
  height: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(74, 74, 74, 1);
  line-height: 44rpx;
}

.vertical-line {
  width: 2rpx;
  height: 40rpx;
  background: rgba(230, 230, 230, 1);
}

.tac {
  text-align: center;
}

.right {
  display: flex;
  justify-content: space-between;
  flex-grow: 1;
  margin-left: 50rpx;
  align-items: center;
}

.calculate-style {
  width: 100%;
  white-space: nowrap;
}

.button-style {
  display: inline-block;
  min-width: 268rpx;
  line-height: 72rpx;
  height: 72rpx;
  border-radius: 44rpx;
  background: rgba(84, 64, 157, 1);
  margin-top: 40rpx;
  margin-bottom: 30rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}
.button-style:first-child {
  margin-left: 40rpx;

}
.active-style {
  background:rgba(216,216,216,1);
}
.charts {
  width: 100%;
  height: 1200rpx;
}
.chart-info {
  margin-top: 24rpx;
  white-space: nowrap;
  width: 100%;
}
.footScroll {
  width: 100%;
}

.chart-info-style {
  display: inline-block;
  width: 200rpx;
  height: 112rpx;
  border: 2rpx solid rgba(204, 204, 204, 1);
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(70, 70, 70, 1);
  text-align: center;
  line-height: 112rpx;
}
.active-chart-info {
  background:rgba(153,153,153,1);
  color:rgba(255,255,255,1);
  border: 2rpx solid rgba(153,153,153,1);
}
.saveCharts {
  width:100%;
height:128rpx;
background:rgba(84,64,157,1);
border-radius: 0;
font-size:32rpx;
font-family:PingFangSC-Medium;
font-weight:500;
color:rgba(255,255,255,1);
line-height:128rpx;
}

